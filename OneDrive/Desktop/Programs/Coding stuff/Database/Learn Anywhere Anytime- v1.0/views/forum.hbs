<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon">
    <title>Forums</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <header>
        <div class="logo">Learn Anywhere Anytime</div>
        <div class="toggle"></div>
        <div class="nav">
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/courses">Courses</a></li>
                <li><a href="/maintenance">Discussion Board</a></li>
                <li><a href="/news">News</a></li>
                <li><a href="/aboutus">About Us</li>
                <li><a href="/contact">Contact</a></li>
            </ul>
        </div>
    </header>
    <div class="main">
        <div class="top-bar">
            <h1 style="font-size: 2.5rem;">Forums</h1>
            <button id="newThreadBtn">Create new Thread!</button>
        </div>
        <ol></ol>
    </div>

    <!-- New Thread Modal -->
    <div id="newThreadModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Create a New Thread</h2>
            <form id="newThreadForm">
                <label for="author">Your Name:</label>
                <input type="text" id="author" name="author" required>
                <label for="title">Thread Title:</label>
                <input type="text" id="title" name="title" required>
                <label for="content">Thread Content:</label>
                <textarea id="content" name="content" rows="4" required></textarea>
                <button type="button" id="submitBtn">Submit</button>
            </form>
        </div>
    </div>

    <script src="script.js"></script>
    <script src="forums_app.js"></script>
    <script>
        var container = document.querySelector('ol');
    var modal = document.getElementById('newThreadModal');
    var newThreadBtn = document.getElementById('newThreadBtn');
    var span = document.getElementsByClassName('close')[0];
    var submitBtn = document.getElementById('submitBtn');

    newThreadBtn.addEventListener('click', function () {
        // Reset the form when "Create new post" is clicked
        resetForm();
        modal.style.display = 'block';
    });

    span.addEventListener('click', function () {
        // Reset the form when closing the modal
        resetForm();
        modal.style.display = 'none';
    });

    window.addEventListener('click', function (event) {
        if (event.target == modal) {
            // Reset the form when clicking outside the modal
            resetForm();
            modal.style.display = 'none';
        }
    });

    submitBtn.addEventListener('click', function () {
        var author = document.getElementById('author').value;
        var title = document.getElementById('title').value;
        var content = document.getElementById('content').value;

        if (author.trim() !== '' && title.trim() !== '' && content.trim() !== '') {
            var newThread = {
                id: threads.length + 1,
                title: title,
                author: author,
                date: Date.now(),
                contents: content,
                comments: []
            };

            threads.push(newThread);
            localStorage.setItem('threads', JSON.stringify(threads));
            renderThreads();

            // Reset the form after successfully submitting
            resetForm();

            modal.style.display = 'none';
        }
    });

    function resetForm() {
        // Clear the values from the input fields
        document.getElementById('author').value = '';
        document.getElementById('title').value = '';
        document.getElementById('content').value = '';
    }

    function renderThreads() {
        container.innerHTML = '';

        for (let thread of threads) {
            var html = `
            <li class="row">
                <a href="/thread?${thread.id}" class="">
                    <h4 class="title">
                        ${thread.title}
                    </h4>
                    <div class="truncate">${thread.contents}</div>
                    <div class="bottom">
                        <p class="timestamp">
                            ${new Date(thread.date).toLocaleString()}
                        </p>
                        <p class="comment-count">
                            ${thread.comments.length} comments
                        </p>
                    </div>
                </a>
            </li>`;
            container.insertAdjacentHTML('beforeend', html);
        }
    }

    renderThreads();
    
    </script>

    <style>
    body {
        margin: 6% 30px;
    }

    .truncate {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        display: inline-block;
        max-width: 100%;
        font-size: 1.1rem;
        font-weight: 0;
    }

    a {
        text-decoration: none;
        color: black;
    }

    ol {
        font-size: 25px;
        padding: 0 17px;
    }

    h1, h4, ol {
        margin: 0;
    }

    p {
        margin: 5px 0;
    }

    .top-bar {
        background-color: rgb(57, 206, 102);
        text-align: center;
    }

    .title {
        font-size: 1.4rem;
    }

    .row {
        padding: 25px 5px;
    }

    .main {
        background-color: #F6F6EF;
        padding: 10px 20px;
    }

    .bottom {
        display: flex;
        color: grey;
        font-size: 12px;
    }

    .comment-count {
        margin-left: 6px;
    }

    #newThreadBtn {
        margin-left: 90%;
        background-color: rgb(57, 171, 206);
        color: white;
        padding: .4%;
        cursor: pointer;
        border: 0;
    }

    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0, 0, 0, 0.7);
    }

    .modal-content {
        background-color: #fefefe;
        margin: 10% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 80%;
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

    .close:hover,
    .close:focus {
        color: black;
        text-decoration: none;
        cursor: pointer;
    }

    label {
        display: block;
        margin-top: 10px;
        
    }

    input,
    textarea {
        width: 100%;
        padding: 8px;
        margin: 5px 0 20px 0;
        display: inline-block;
        border: 1px solid #ccc;
        box-sizing: border-box;
    }

    button {
        background-color: #4CAF50;
        color: white;
        padding: 10px;
        border: none;
        cursor: pointer;
    }


    #submitBtn {
        width: 100%;
    }

    #submitBtn:hover {
        background-color: rgb(62, 142, 65);
    }

    #newThreadBtn:hover {
        background-color: rgba(54, 160, 193, 0.9) ;
    }

    
</style>

</body>
</html>
